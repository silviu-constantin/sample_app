<p id="notice"><%= notice %></p>

<h1>Qrcodes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @qrcodes.each do |qrcode| %>
      <tr>
        <td><%= qrcode.name %></td>
        <td><%= image_tag(qrcode.qr_code) if qrcode.qr_code.attached? %></td>
        <td><%= link_to 'Show', qrcode %></td>
        <td><%= link_to 'Edit', edit_qrcode_path(qrcode) %></td>
        <td><%= link_to 'Destroy', qrcode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

