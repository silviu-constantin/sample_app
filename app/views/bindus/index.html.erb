<p id="notice"><%= notice %></p>

<h1>Bindus</h1>

<table>
  <thead>
    <tr>
      <th>Menu</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bindus.each do |bindu| %>
      <tr>
        <td><%= bindu.menu %></td>
        <td><%= bindu.price %></td>
        <% if current_user.owner == "bindu" %>
        <td><%= link_to 'Show', bindu %></td>
        <td><%= link_to 'Edit', edit_bindu_path(bindu) %></td>
        <td><%= link_to 'Destroy', bindu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.owner == "bindu" %>
  <%= link_to 'Add new menu', new_bindu_path %>
<% else %>
  <%= link_to 'Make an order', order_path %>
<% end %>
